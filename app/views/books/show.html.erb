<body>
 <div class="container">
  <div class="row">
　  <div class="col-lg-3" style=""> 
     <%= render 'users/list_users', user: @book.user %>

     <div class="container">
  <div class="row">
   <div class="col-lg-3" style="">
   <h2>New books</h2>
   <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
     <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    </div>
   <% end %>
    <%= form_for(@book_s) do |f| %>
    <div class="field">
     <label for="book_title">Title</label><br>
     <%= f.text_field :book_title, class: "book_title col-xs-12" %>
    </div>
    <div class="field">
    <label for="book_body">Opinion</label><br>
     <%= f.text_area :book_body, class: "book_body col-xs-12" %>
    </div>
    <div class="field">
     <%= f.submit 'Create Book', class: "@book_#{@book_s.id} btn btn-primary col-xs-12" %>
    </div>
    <% end %>
   </div>
  </div>
 </div>

    </div>
    <div class="col-lg-9" style="">
     <h2>Book detail</h2>
     <table class="table">
      <tr><td><%= attachment_image_tag(@book.user, :image, :fill, 60, 60, class: "image") %><%= link_to user_path(@book.user_id) do %><br><%= @book.user.name %><% end %></td>
       <td><%= @book.book_title %></td>
       <td><%= @book.book_body %></td>
       <% if current_user.id == @book.user_id %>
       <td><%= link_to 'Edit', edit_book_path(@book.id), class: "edit_book_#{@book.id} btn btn-success active btn-sm" %></td>
       <td><%= link_to "Destroy", book_path(@book.id), class: "destroy_book_#{@book.id} btn btn-danger active btn-sm", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
       <% end %>
      </tr>
     </table>
    </div>
   </div>
  </div>
  <footer>
  <div class='container'>
   <div class='row'>
    <div class='col-xs-3 col-xs-offset-9'>
     <p>CopyRight Infratop.inc</p>
    </div>
   </div>
  </div>
 </footer>
</body>

