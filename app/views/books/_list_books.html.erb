<body>
 <div class="container">
  <div class="row">
   <div class="col-lg-3" style="">
   <h2>New books</h2>
   <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
     <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    </div>
   <% end %>
    <%= form_for(book) do |f| %>
    <div class="field">
     <label for="book_title">Title</label><br>
     <%= f.text_field :book_title, class: "book_title col-xs-12" %>
    </div>
    <div class="field">
    <label for="book_body">Opinion</label><br>
     <%= f.text_area :book_body, class: "book_body col-xs-12" %>
    </div>
    <div class="field">
     <%= f.submit 'Create Book', class: "book_#{book.id} btn btn-primary col-xs-12" %>
    </div>
    <% end %>
   </div>
  </div>
 </div>
</body>