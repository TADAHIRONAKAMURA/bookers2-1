
<body>
 <div class="container">
　<div class="row">
　　<div class="col-lg-3" style=""> 
     <%= render 'users/list_users', user: @user %>
     <%= render 'books/list_books', book: @book %>
    </div>
    <div class="col-lg-9" style="">
     <h2>Users</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
       <!-- att_img_tag(bookに紐ずけられているuser),写真-->
       <td><%= attachment_image_tag user, :image, :fill, 50, 50, fallback: "noimage.png", class: "noimage" %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id), class: 'user_#{user.id}' %></td>
       <!-- ink_to user_path(@book.user_id) -->
       </tr>
      <% end %>
      </tbody>
     </table>
    </div>
   </div>
  </div>
  <footer>
  <div class='container'>
   <div class='row'>
    <div class='col-xs-3 col-xs-offset-9'>
     <p>CopyRight Infratop.inc</p>
    </div>
   </div>
  </div>
 </footer>
</body>
