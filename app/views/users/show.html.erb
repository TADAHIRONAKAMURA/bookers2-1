<body>
　<div class="container">
　　<div class="row">
　　　<div class="col-lg-3" style="">
      <%= render 'users/list_users', user: @user %>
      <%= render 'books/list_books', book: @book %>
     </div>
     <div class="col-lg-9" style="">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
       <% @books.each do |book| %>
       <tr>
       	<!-- attachment_image_tag(bookに紐ずけられているuser),写真-->
        <th><%= attachment_image_tag(book.user, :image, :fill, 50, 50, fallback: "noimage.png", class: "noimage") %></th>
        <td><%=link_to book.book_title, book_path(book.id), class: "book_#{@book.id}" %></td>
        <td><%= book.book_body %></td>
       </tr>
       <% end %>
       </tbody>
      </table>
     </div>
    </div>
   </div>
 <footer>
  <div class='container'>
   <div class='row'>
    <div class='col-xs-3 col-xs-offset-9'>
     <p>CopyRight Infratop.inc</p>
    </div>
   </div>
  </div>
 </footer>
</body>


